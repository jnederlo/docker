docker run --name Abathur -it -p 3000:3000 -v $HOME:/root/app python:2-slim bash
apt-get update
apt-get install vim -y
pip install flask

cd root
cd app
vim main.py
from flask import Flask
app = Flask(__name__)

@app.route("/")
def hello_world():
		return '<h1>"Hello World"</h1>'

if __name__ == '__main__':
	app.run(host='0.0.0.0', port=3000)
cd ..
python app/main.py

